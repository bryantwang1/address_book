<head>
    <link href="@Url.Content("~/Content/css/styles.css")" rel="stylesheet" type="text/css">
</head>
<body>
    <h1>Address Book</h1>
    @if(Model.Count == 0)
    {
        <h3>You don't have any contacts yet.</h3>
    }
    else
    {
        @foreach(var contact in Model)
        {
            <li><a href="/contact/@contact.GetId()">@contact.GetName()</li>
        }
    }

    <h3><a href="/contacts/new">Click here to add a new contact</a></h3>
    <form action="/contacts/clear" method="post">
        <button type="submit">Delete all contacts</button>
    </form>
</body>
