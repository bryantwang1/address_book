<head>
    <link href="@Url.Content("~/Content/css/styles.css")" rel="stylesheet" type="text/css">
</head>
<body>
    <h1>Contacts Containing Your Search</h1>
    @if(Model.Count == 0)
    {
        <h3>No contacts fit your search.</h3>
    }
    else
    {
        @foreach(var contact in Model)
        {
            <li><a href="/contact/@contact.GetId()">@contact.GetName()</li>
        }
    }

    <h3><a href="/">Click here to return to your address book</a></h3>
    <h3>Didn't find what you were looking for? <a href="/contacts/search_form">Click here to search your address book again</a></h3>
</body>
